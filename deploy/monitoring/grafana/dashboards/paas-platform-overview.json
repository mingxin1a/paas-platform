{
  "title": "PaaS 平台总览",
  "uid": "paas-platform-overview",
  "version": 1,
  "schemaVersion": 38,
  "tags": ["paas", "overview"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "网关健康",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
      "targets": [{"expr": "up{job=\"gateway\"}", "legendFormat": "网关"}],
      "options": {"colorMode": "value", "graphMode": "none"}
    },
    {
      "id": 2,
      "title": "治理中心健康",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
      "targets": [{"expr": "up{job=\"governance\"}", "legendFormat": "治理中心"}]
    },
    {
      "id": 3,
      "title": "监控中心健康",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
      "targets": [{"expr": "up{job=\"monitor\"}", "legendFormat": "监控"}]
    },
    {
      "id": 4,
      "title": "细胞健康数",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
      "targets": [{"expr": "count(up{job=\"cells-health\"} == 1)", "legendFormat": "健康"}],
      "fieldConfig": {"defaults": {"max": 13}}
    },
    {
      "id": 5,
      "title": "各细胞健康状态",
      "type": "table",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 4},
      "targets": [{
        "expr": "up{job=\"cells-health\"}",
        "format": "table",
        "instant": true
      }],
      "transformations": [{"id": "organize", "options": {"renameByName": {"cell": "细胞", "Value": "健康(1=正常)"}}}]
    },
    {
      "id": 6,
      "title": "接口 QPS（需网关暴露 /metrics）",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [{
        "expr": "sum(rate(http_requests_total[5m])) by (cell, job)",
        "legendFormat": "{{ cell }}"
      }]
    },
    {
      "id": 7,
      "title": "P99 延迟（秒）",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
      "targets": [{
        "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, cell))",
        "legendFormat": "{{ cell }}"
      }]
    },
    {
      "id": 8,
      "title": "主机 CPU 使用率（需 node_exporter）",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 12},
      "targets": [{
        "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) by (instance) * 100)",
        "legendFormat": "{{ instance }}"
      }]
    },
    {
      "id": 9,
      "title": "主机内存使用率（需 node_exporter）",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 12},
      "targets": [{
        "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
        "legendFormat": "{{ instance }}"
      }]
    }
  ],
  "refresh": "30s"
}
